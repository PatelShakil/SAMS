<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".users.ui.main.MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_reminder"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_outline_round"
            android:backgroundTint="@android:color/transparent"
            android:text="Notifications"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@+id/main_teachers" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_teachers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_outline_round"
            android:backgroundTint="@android:color/transparent"
            android:text="Teachers"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@+id/main_classes" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_gallery"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_outline_round"
            android:backgroundTint="@android:color/transparent"
            android:text="Gallery"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@+id/main_teachers" />
       </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>