<?xml version="1.0" encoding="utf-8"?>
<com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width='match_parent'
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:id="@+id/collection"
    app:expansion_openOnlyOne="true"
    android:layout_height="wrap_content"
    tools:context=".users.ui.teachers.TeachersActivity">

    <com.github.florent37.expansionpanel.ExpansionHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        app:expansion_headerIndicator="@id/headerIndicator"
        app:expansion_layout="@id/expansionLayout"
        app:expansion_toggleOnClick="true">
<androidx.cardview.widget.CardView
    android:id="@+id/header_card"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:layout_margin="3dp"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/techer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="@font/tajawal_medium"
            android:paddingStart="9dp"
            android:text="Mr.Anas Yusuf"
            android:textSize="20sp"
            android:textStyle="bold" />
    <ImageView
        android:id="@+id/headerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />
</androidx.cardview.widget.CardView>
        <!-- HEADER -->
        <!-- HEADER INDICATOR -->

    </com.github.florent37.expansionpanel.ExpansionHeader>

    <com.github.florent37.expansionpanel.ExpansionLayout
        android:id="@+id/expansionLayout"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="true"
        android:layout_width="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:padding="3dp"
            android:layout_margin="3dp">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="start"
            android:paddingStart="15dp"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teacher_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textFontWeight="700"
                android:fontFamily="@font/tajawal_medium"/>
            <TextView
                android:id="@+id/teacher_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation : Head Master"/>

            <TextView
                android:id="@+id/teacher_qua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification : M.A. B.Ed.(P.T.C)"/>
            <!-- CONTENT -->
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </com.github.florent37.expansionpanel.ExpansionLayout>

</com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout>